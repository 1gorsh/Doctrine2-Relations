{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <!-- Example row of columns -->
    <div class="row">
        {% for post in posts %}
            <div class="col-lg-8">
                <h2>{{ post.title }}</h2>
                <p>{{ post.body }}</p>
                <p>{% for tag in post.tags %}
                    <a class="btn btn-xs btn-default" href="{{
                        path('postsByTag', {'title': tag.title})
                    }}" title="All posts associated for this tag">{{ tag.title }}</a>
                {% endfor %}</p>
                <small>Posted at: {{ post.publishedAt|date }}</small>
                <p><a class="btn btn-primary" href="#" role="button">View details &raquo;</a></p>
            </div>
        {% endfor %}
    </div>
{% endblock %}